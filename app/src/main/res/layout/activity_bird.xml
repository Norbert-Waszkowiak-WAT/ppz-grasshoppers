<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/birdBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bird_background">

    <ImageView
        android:id="@+id/bird"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/bird_wings_flat" />

    <ImageView
        android:id="@+id/birdButtonStartGame"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/bird_start"
        android:translationZ="500dp"/>

    <TextView
        android:id="@+id/birdScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginEnd="12dp"
        android:text="0"
        android:textSize="60sp"
        android:translationZ="500dp" />

    <ImageView
        android:id="@+id/birdButtonPauseBack"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:gravity="top|left"
        android:translationZ="500dp"
        app:srcCompat="@android:drawable/ic_menu_revert" />


</FrameLayout>